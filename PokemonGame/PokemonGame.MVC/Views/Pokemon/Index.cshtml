@using PokemonGame.Data.Model
@model IEnumerable<Pokemone>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="pokemon-container container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary" style="font-family: 'Press Start 2P', cursive;">Mis Pokemones</h2>
        <a class="btn btn-success" href="@Url.Action("Create")">
            <i class="fas fa-plus-circle"></i> Crear Nuevo
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Tipo</th>
                    <th>Debilidad</th>
                    <th>Número</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.Nombre</td>
                        <td>@p.Tipo</td>
                        <td>@p.Debilidad</td>
                        <td>@p.Numero</td>
                        <td>
                            <a class="btn btn-warning btn-sm mr-2" href="@Url.Action("Edit", new { id = p.PokemonId })">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", new { id = p.PokemonId })">
                                <i class="fas fa-trash-alt"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .pokemon-container {
        background-color: #ffffff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .table thead th {
        vertical-align: middle;
        text-align: center;
    }

    .table tbody td {
        vertical-align: middle;
        text-align: center;
    }

    .btn-success, .btn-warning, .btn-danger {
        font-family: 'Press Start 2P', cursive;
    }

    .btn-success:hover, .btn-warning:hover, .btn-danger:hover {
        opacity: 0.8;
    }

    @@media (max-width: 576px) {
        .btn-sm {
            padding: 0.25rem 0.5rem;
            font-size: 0.75rem;
        }

        .d-flex.justify-content-between.align-items-center.mb-4 {
            flex-direction: column;
            align-items: flex-start;
        }

        .d-flex.justify-content-between.align-items-center.mb-4 h2 {
            margin-bottom: 15px;
        }
    }
</style>



