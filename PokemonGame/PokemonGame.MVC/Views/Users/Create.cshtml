@using PokemonGame.Data.Model
@model Usuario

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="create-user-container container my-5">
    <div class="create-user-card p-5 shadow-lg rounded bg-light">
        <div class="text-center mb-4">
            <img src="https://raw.githubusercontent.com/PokeAPI/media/master/logo/pokeapi_256.png" alt="PokemonGame" style="height: 80px;" />
            <h2 class="mt-2 text-primary" style="font-family: 'Press Start 2P', cursive;">Crear Usuario</h2>
        </div>

        @using (Html.BeginForm("Create", "Users", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
        {
            <div class="form-group mb-4">
                @Html.LabelFor(m => m.NombreUsuario, htmlAttributes: new { @class = "control-label font-weight-bold" })
                @Html.TextBoxFor(m => m.NombreUsuario, new { @class = "form-control", placeholder = "Nombre de Usuario", required = "required" })
                @Html.ValidationMessageFor(m => m.NombreUsuario, "", new { @class = "text-danger mt-1" })
            </div>

            <div class="form-group mb-4">
                @Html.LabelFor(m => m.Rol, htmlAttributes: new { @class = "control-label font-weight-bold" })
                @Html.TextBoxFor(m => m.Rol, new { @class = "form-control", placeholder = "Entrenador, Administrador, Enfermera", required = "required" })
                @Html.ValidationMessageFor(m => m.Rol, "", new { @class = "text-danger mt-1" })
            </div>

            <div class="form-group mb-4">
                @Html.LabelFor(m => m.Nombre, htmlAttributes: new { @class = "control-label font-weight-bold" })
                @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", placeholder = "Nombre Completo", required = "required" })
                @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger mt-1" })
            </div>

            <div class="form-group mb-4">
                <label for="passwordSinHash" class="control-label font-weight-bold">Contraseña (sin hash)</label>
                <input type="password" name="passwordSinHash" id="passwordSinHash" class="form-control" placeholder="Ingresa la contraseña" required />
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-warning text-white font-weight-bold">
                    <i class="fas fa-save"></i> Crear
                </button>
                <a href="@Url.Action("Index")" class="btn btn-secondary font-weight-bold">
                    <i class="fas fa-times-circle"></i> Cancelar
                </a>
            </div>
        }
    </div>
</div>

<style>
    .create-user-container {
        background-color: #f0f0f0;
        padding: 20px;
        border-radius: 10px;
    }

    .create-user-card {
        border: 2px solid #2A75BB;
    }

    .btn-warning {
        background-color: #FFCB05;
        border-color: #FFCB05;
    }

    .btn-warning:hover {
        background-color: #e0b700;
        border-color: #e0b700;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
        border-color: #545b62;
    }

    h2 {
        font-size: 2rem;
    }

    .font-weight-bold {
        font-weight: bold;
    }

    .form-control::placeholder {
        color: #6c757d;
        font-style: italic;
    }

    @@media (max-width: 576px) {
        .create-user-card {
            padding: 2rem;
        }

        h2 {
            font-size: 1.5rem;
        }

        .btn-warning, .btn-secondary {
            width: 100%;
            margin-bottom: 10px;
        }

        .d-flex.justify-content-between {
            flex-direction: column;
            align-items: stretch;
        }
    }
</style>



