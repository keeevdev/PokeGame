@using PokemonGame.Data.Model
@model IEnumerable<Usuario>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="usuarios-container container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary" style="font-family: 'Press Start 2P', cursive;">Usuarios</h2>
        <a class="btn btn-success" href="@Url.Action("Create")">
            <i class="fas fa-user-plus"></i> Crear Usuario
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Nombre de Usuario</th>
                    <th>Rol</th>
                    <th>Nombre Completo</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var u in Model)
                {
                    <tr>
                        <td>@u.NombreUsuario</td>
                        <td>@u.Rol</td>
                        <td>@u.Nombre</td>
                        <td>
                            <a class="btn btn-warning btn-sm mr-2" href="@Url.Action("Edit", new { id = u.UsuarioId })">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", new { id = u.UsuarioId })">
                                <i class="fas fa-trash-alt"></i> Borrar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .usuarios-container {
        background-color: #ffffff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .table thead th {
        vertical-align: middle;
        text-align: center;
        font-family: 'Press Start 2P', cursive;
        font-size: 1rem;
    }

    .table tbody td {
        vertical-align: middle;
        text-align: center;
        font-family: 'Press Start 2P', cursive;
        font-size: 0.9rem;
    }

    .btn-success, .btn-warning, .btn-danger {
        font-family: 'Press Start 2P', cursive;
        font-size: 0.8rem;
    }

    .btn-success i, .btn-warning i, .btn-danger i {
        margin-right: 5px;
    }

    .btn-success {
        background-color: #FFCB05;
        border-color: #FFCB05;
    }

    .btn-success:hover {
        background-color: #e0b700;
        border-color: #e0b700;
    }

    .btn-warning {
        background-color: #FFC107;
        border-color: #FFC107;
    }

    .btn-warning:hover {
        background-color: #e0a800;
        border-color: #d39e00;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn-danger:hover {
        background-color: #c82333;
        border-color: #bd2130;
    }

    @@media (max-width: 576px) {
        .usuarios-container {
            padding: 20px;
        }

        .d-flex.justify-content-between.align-items-center.mb-4 {
            flex-direction: column;
            align-items: flex-start;
        }

        .d-flex.justify-content-between.align-items-center.mb-4 h2 {
            margin-bottom: 15px;
        }

        .btn-success, .btn-warning, .btn-danger {
            width: 100%;
            margin-bottom: 10px;
            font-size: 0.9rem;
        }

        .btn-success i, .btn-warning i, .btn-danger i {
            margin-right: 0;
        }

        .btn-warning.btn-sm, .btn-danger.btn-sm {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .btn-warning.btn-sm::after, .btn-danger.btn-sm::after {
            content: '';
        }
    }
</style>



