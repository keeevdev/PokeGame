@{
    Layout = null;
    var rol = Session["Rol"] as string;
    var nombreUsuario = Session["NombreUsuario"] as string;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>PokemonGame</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/site.css" />
    <style>
        body {
            font-family: 'Press Start 2P', cursive;
            background-color: #f5f5f5;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
        }

        .navbar {
            background-color: #FFCB05;
        }

        .navbar-brand {
            color: #2A75BB !important;
            font-size: 1.5rem;
            font-weight: bold;
        }

        .nav-link {
            color: #2A75BB !important;
            font-size: 1rem;
        }

            .nav-link:hover {
                color: #FF0000 !important;
            }

        .container {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            flex: 1; =
        }

        footer {
            text-align: center;
            padding: 20px;
            background-color: #FFCB05;
            color: #2A75BB;
        }

        @@media (max-width: 768px) {
            .navbar-brand {
                font-size: 1.2rem;
            }

            .nav-link {
                font-size: 0.9rem;
            }

            .container {
                padding: 15px;
            }
        }

        @@media (max-width: 576px) {
            footer {
                font-size: 0.8rem;
                padding: 10px;
            }

            .nav-link {
                font-size: 0.8rem;
            }

            .navbar-brand img {
                height: 30px;
            }
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light">
        <a class="navbar-brand" href="@Url.Action("Index", "Home")">
            <img src="https://raw.githubusercontent.com/PokeAPI/media/master/logo/pokeapi_256.png" alt="PokemonGame" style="height:40px;" />
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarMain" aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarMain">
            <ul class="navbar-nav mr-auto">
                @if (!string.IsNullOrEmpty(rol))
                {
                    if (rol == "Administrador")
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Pokedex")">
                                <i class="fas fa-book-open"></i> Pokedex
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Users")">
                                <i class="fas fa-users"></i> Usuarios
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Battle")">
                                <i class="fas fa-fist-raised"></i> Batalla Pokémon
                            </a>
                        </li>
                    }
                    if (rol == "Entrenador")
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Pokemon")">
                                <i class="fas fa-pokemon-p"></i> Mis Pokemones
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Mensajes")">
                                <i class="fas fa-envelope"></i> Mensajes
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Battle")">
                                <i class="fas fa-fist-raised"></i> Batalla Pokémon
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Crear", "SolicitudesAtencion")">
                                <i class="fas fa-heart"></i> Crear Solicitud
                            </a>
                        </li>
                    }
                    if (rol == "Enfermera")
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "SolicitudesAtencion")">
                                <i class="fas fa-heartbeat"></i> Solicitudes
                            </a>
                        </li>
                    }
                }
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer>
        &copy; @DateTime.Now.Year PokemonGame. Todos los derechos reservados.
    </footer>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
</body>
</html>











