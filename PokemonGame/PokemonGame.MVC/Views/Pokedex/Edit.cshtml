@using PokemonGame.Data.Model
@model Pokedex

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="edit-pokedex-container container my-5">
    <div class="edit-pokedex-form p-5 shadow-lg rounded bg-light">
        <div class="text-center mb-4">
            <img src="https://raw.githubusercontent.com/PokeAPI/media/master/logo/pokeapi_256.png" alt="PokemonGame" style="height: 80px;" />
            <h2 class="mt-2 text-primary" style="font-family: 'Press Start 2P', cursive;">Editar Pokedex</h2>
        </div>

        @using (Html.BeginForm("Edit", "Pokedex", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
        {
            @Html.HiddenFor(m => m.PokedexId)

            <div class="form-group mb-4">
                @Html.LabelFor(m => m.Nombre, htmlAttributes: new { @class = "control-label font-weight-bold" })
                @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", placeholder = "Nombre del Pokémon", required = "required" })
                @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger mt-1" })
            </div>

            <div class="form-group mb-4">
                @Html.LabelFor(m => m.Tipo, htmlAttributes: new { @class = "control-label font-weight-bold" })
                @Html.TextBoxFor(m => m.Tipo, new { @class = "form-control", placeholder = "Tipo (e.g., Fuego, Agua)", required = "required" })
                @Html.ValidationMessageFor(m => m.Tipo, "", new { @class = "text-danger mt-1" })
            </div>

            <div class="form-group mb-4">
                @Html.LabelFor(m => m.Debilidad, htmlAttributes: new { @class = "control-label font-weight-bold" })
                @Html.TextBoxFor(m => m.Debilidad, new { @class = "form-control", placeholder = "Debilidad (e.g., Agua)", required = "required" })
                @Html.ValidationMessageFor(m => m.Debilidad, "", new { @class = "text-danger mt-1" })
            </div>

            <div class="form-group mb-4">
                @Html.LabelFor(m => m.Evoluciones, htmlAttributes: new { @class = "control-label font-weight-bold" })
                @Html.TextBoxFor(m => m.Evoluciones, new { @class = "form-control", placeholder = "Evoluciones (e.g., Bulbasaur -> Ivysaur)", required = "required" })
                @Html.ValidationMessageFor(m => m.Evoluciones, "", new { @class = "text-danger mt-1" })
            </div>

            <div class="form-group mb-4">
                @Html.LabelFor(m => m.Peso, htmlAttributes: new { @class = "control-label font-weight-bold" })
                @Html.TextBoxFor(m => m.Peso, new { @class = "form-control", placeholder = "Peso (kg)", required = "required", type = "number", step = "0.1" })
                @Html.ValidationMessageFor(m => m.Peso, "", new { @class = "text-danger mt-1" })
            </div>

            <div class="form-group mb-4">
                @Html.LabelFor(m => m.Numero, htmlAttributes: new { @class = "control-label font-weight-bold" })
                @Html.TextBoxFor(m => m.Numero, new { @class = "form-control", placeholder = "Número en la Pokédex", required = "required", type = "number", min = "1" })
                @Html.ValidationMessageFor(m => m.Numero, "", new { @class = "text-danger mt-1" })
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-warning text-white font-weight-bold">
                    <i class="fas fa-save"></i> Guardar Cambios
                </button>
                <a href="@Url.Action("Index")" class="btn btn-secondary font-weight-bold">
                    <i class="fas fa-times-circle"></i> Cancelar
                </a>
            </div>
        }
    </div>
</div>


<style>
    .edit-pokedex-container {
        background-color: #f0f0f0;
        padding: 20px;
    }

    .edit-pokedex-form {
        border: 2px solid #2A75BB;
    }

    .btn-warning {
        background-color: #FFCB05;
        border-color: #FFCB05;
    }

    .btn-warning:hover {
        background-color: #e0b700;
        border-color: #e0b700;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
        border-color: #545b62;
    }

    h2 {
        font-size: 2rem;
    }

    .font-weight-bold {
        font-weight: bold;
    }

    .form-control::placeholder {
        color: #6c757d;
        font-style: italic;
    }

    @@media (max-width: 767.98px) {
        .edit-pokedex-form {
            padding: 2rem;
        }

        h2 {
            font-size: 1.5rem;
        }

        .btn-warning, .btn-secondary {
            width: 100%;
            margin-bottom: 10px;
        }

        .d-flex.justify-content-between {
            flex-direction: column;
            align-items: stretch;
        }
    }
</style>

